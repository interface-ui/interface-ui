{
  "name": "interface-ui",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@7.5.2",
  "license": "MIT",
  "keywords": [
    "interface-ui-vue",
    "vue",
    "vue3",
    "component",
    "library"
  ],
  "workspaces": [
    "packages/*",
    "docs",
    "interface-ui"
  ],
  "scripts": {
    "docs:dev": "pnpm -C docs run dev",
    "docs:preview": "pnpm -C docs run preview",
    "play:dev": "pnpm -C playground run dev",
    "docs:build": "pnpm run build && pnpm -C docs run build",
    "build": "pnpm -F './packages/*' -r --stream build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "npx esno ./scripts/release.ts",
    "prepare": "husky install",
    "comp": "node ./scripts/generate.js"
  },
  "dependencies": {
    "vue": "^3.3.8"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.35.3",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@commitlint/types": "^17.4.4",
    "@esbuild-kit/cjs-loader": "^2.4.4",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/gulp": "^4.0.17",
    "@types/node": "^20.10.5",
    "@vitejs/plugin-vue": "^4.4.1",
    "@vitejs/plugin-vue-jsx": "^3.0.0",
    "@vue/compiler-core": "^3.2.47",
    "@vue/test-utils": "^2.2.10",
    "chalk": "^5.3.0",
    "consola": "^3.2.3",
    "eslint": "^8.18.0",
    "esno": "^0.16.3",
    "execa": "^6.1.0",
    "fs-extra": "^11.2.0",
    "generate-template-files": "^3.2.1",
    "gulp": "^4.0.2",
    "husky": "^8.0.1",
    "jsdom": "^21.1.0",
    "less": "^4.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "^3.1.1",
    "readline": "^1.3.0",
    "rimraf": "^3.0.2",
    "rollup": "^4.4.1",
    "sucrase": "^3.35.0",
    "tsx": "^4.7.0",
    "typescript": "^4.9.3",
    "unplugin-auto-import": "^0.15.0",
    "unplugin-vue-components": "^0.24.0",
    "vite": "^4.5.0",
    "vite-plugin-dts": "^3.6.4",
    "vue-tsc": "^1.8.22"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix"
  }
}
