{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "baseUrl": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitThis": true,
    "allowJs": false,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "downlevelIteration": true,
    "composite": true,
    "outDir": "es",
    "declaration": true,
    "emitDeclarationOnly": true,
    "lib": ["ES2020", "DOM"],
    "types": [],
    "noImplicitAny": true
  },
  "exclude": ["node_modules", "lib", "es"]
}
